<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/WelcomeUser"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_16"
        android:paddingTop="@dimen/margin_16"
        android:src="@drawable/coffee_house" />

    <TextView
        android:id="@+id/WelcomeUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/Info"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        android:text="@string/welcome_guest"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_26" />

    <TextView
        android:id="@+id/Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/NameField"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        android:text="@string/info"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16" />

    <EditText
        android:id="@+id/NameField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@color/brown_200"
        android:hint="@string/name"
        android:inputType="text|textCapWords"
        android:paddingLeft="@dimen/margin_10" />

    <EditText
        android:id="@+id/PhoneNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/NameField"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@color/brown_200"
        android:hint="@string/mobile_number"
        android:inputType="phone"
        android:paddingLeft="@dimen/margin_10" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/PhoneNo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_16"
        android:alpha="0.7"
        android:src="@drawable/premium_coffee" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_16"
        android:background="@android:color/transparent"
        android:onClick="userActivity"
        android:text="@string/imin"
        android:textColor="@color/white" />

</RelativeLayout>
